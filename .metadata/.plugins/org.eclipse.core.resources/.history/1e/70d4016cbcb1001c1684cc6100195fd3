
public class JumpStatementDemo {

	public static void main(String[] args) {
		
		// jump statements => break and continue
		// break => inside a loop or with switch-case
		// in a loop it is always conditional based
		// 1000 files => D:/Demos/scenery.jpg
		for(int i=1;i<=10;i++)
		{
			System.out.println(i);
			break;// it immediately stops the loop
			
		}

	}

}
